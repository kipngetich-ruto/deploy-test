# Database Configuration
POSTGRES_USER=scanner_prod
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=scanner_production

# Redis Configuration
REDIS_URL=redis://redis:6379

# Scanner API Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Next.js Configuration
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://yourdomain.com
SCANNER_API_URL=http://scanner:8000

# Database URL for Next.js
DATABASE_URL=postgresql://scanner_prod:your_strong_password_here@db:5432/scanner_production

# Authentication
AUTH_SECRET=generate_a_secure_random_string_at_least_32_chars

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Application
APP_NAME=Zeramos Scanner

# Email (if needed)
# SMTP_HOST=
# SMTP_PORT=
